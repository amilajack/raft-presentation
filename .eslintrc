{
  "env": {
    "es6": true,
    "browser": false,
    "node": true,
    "commonjs": false
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": [
    "babel",
    "filenames",
    "flowtype",
    "import",
    "jsx-a11y",
    "promise",
    "react",
    "security"
  ],
  "extends": [
    "plugin:promise/recommended",
    "plugin:flowtype/recommended",
    "airbnb",
    "prettier"
  ],
  "rules": {
    "comma-dangle": [
      "error",
      "always-multiline",
      {"functions": "never", "exports": "ignore", "imports": "ignore"}
    ],
    "import/no-commonjs": "error",
    "indent": [2, 2, {"SwitchCase": 1}],
    "no-console": 0,
    "no-magic-numbers": 0,
    "quotes": [
      "error",
      "single",
      {"avoidEscape": true, "allowTemplateLiterals": true}
    ],
    "react/jsx-curly-brace-presence": [
      "warn",
      {"props": "always", "children": "ignore"}
    ],
    "react/jsx-filename-extension": ["error", {"extensions": [".jsx"]}],
    "react/jsx-no-bind": 0,
    "react/prefer-stateless-function": 0,
    "react/destructuring-assignment": 0
  },
  "globals": {
    "afterEach": true,
    "describe": true,
    "expect": true,
    "it": true,
    "jest": true,
    "test": true
  }
}
